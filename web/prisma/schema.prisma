generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserTier {
  FREE
  PRO
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  reposClaimed  Int       @default(0)
  tier          UserTier  @default(FREE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  repos         Repo[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum RepoStatus {
  PENDING
  FETCHING
  PARSING
  ANALYZING
  COMPLETED
  FAILED
}

model Repo {
  id            String         @id @default(cuid())
  owner         String
  name          String
  fullName      String         @unique
  status        RepoStatus     @default(PENDING)
  commitSha     String?
  progress      Int            @default(0)
  errorMessage  String?
  indexedWith   String?
  claimedBy     User?          @relation(fields: [claimedById], references: [id])
  claimedById   String?
  documentation Documentation?
  chatSessions  ChatSession[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([fullName])
}

model Documentation {
  id               String   @id @default(cuid())
  repo             Repo     @relation(fields: [repoId], references: [id], onDelete: Cascade)
  repoId           String   @unique
  pages            Json?
  repoContext      String   @db.Text
  // Legacy columns kept nullable for backward compat with existing docs
  overview         Json?
  gettingStarted   Json?
  coreArchitecture Json?
  apiReference     Json?
  usagePatterns    Json?
  developmentGuide Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ChatSession {
  id            String        @id @default(cuid())
  repo          Repo          @relation(fields: [repoId], references: [id], onDelete: Cascade)
  repoId        String
  sessionToken  String        @unique
  questionsUsed Int           @default(0)
  messages      ChatMessage[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([sessionToken])
}

enum ChatRole {
  USER
  ASSISTANT
}

model ChatMessage {
  id            String      @id @default(cuid())
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  chatSessionId String
  role          ChatRole
  content       String      @db.Text
  createdAt     DateTime    @default(now())
}
